%div.form-group.comment-form
    = form_with(model: [post.breed, post, post.comments.new]) do |f|
        = f.hidden_field :user_id, value: post.user.id
        = f.hidden_field :post_id, value: post.id
        = f.text_field :body, class:"form-control", autocomplete: 'off'
        = f.submit data: {disable_with: false}, class:'btn btn-primary'