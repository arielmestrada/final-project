.d-flex.flex-column.mt-5.container
    = link_to( view_profile_path(current_user), class: "text-decoration-none text-secondary mb-3 h5") do
        .d-flex.align-items-center
            %i.fa-solid.fa-user{style: 'margin-right: 10px;'}
            = "#{current_user.first_name.capitalize} #{current_user.last_name.capitalize}"
    = link_to( root_path, class: 'text-decoration-none text-secondary mb-3 h5') do
        .d-flex.align-items-center
            %i.fa-solid.fa-envelope{style: 'margin-right: 10px;'}
            Messages
    = link_to( view_friends_path, class: 'text-decoration-none text-secondary mb-3 h5') do
        .d-flex.align-items-center
            %i.fa-solid.fa-user-group{style: 'margin-right: 10px;'}
            Friends
    %h5.mt-2.mb-2 Groups
    %div.container{style: 'margin-top: 10px;'}
        - current_user.user_preferences.each do |dog|
            .d-flex.align-items-center.mb-1.text-secondary
                %h5
                    %i.fa-solid.fa-dog{style: 'margin-right: 5px;'}
                    = dog
