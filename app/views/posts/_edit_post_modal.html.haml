%button.btn.mx-2.py-0{"data-bs-target" => "#editPost#{post.id}", "data-bs-toggle" => "modal", :type => "button"}
    %svg.bi.bi-three-dots{:fill => "currentColor", :height => "16", :viewbox => "0 0 16 16", :width => "16", :xmlns => "http://www.w3.org/2000/svg"}
        %path{:d => "M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z"}

.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "editPost#{post.id}Label", :tabindex => "-1", id: "editPost#{post.id}"}
    .modal-dialog
        .modal-content
            .modal-header
                %h5.modal-title{id: "editPost#{post.id}Label"}
                    Manage Post
                %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
            .modal-body
                %div
                    = form_with(model: [post.breed, post], class: "form-group") do |f|
                        = f.text_field :body, class: "form-control"
                        = f.submit "Edit Post", class:"btn btn-primary my-3", "data-bs-dismiss" => "modal"
                
            .modal-footer.d-flex.justify-content-between
                = button_to "Delete Post", breed_post_path(post.breed.id, post.id), method: :delete, class: "btn btn-danger", "data-bs-dismiss" => "modal"
                %button.btn.btn-secondary{"data-bs-dismiss" => "modal", :type => "button"} Cancel