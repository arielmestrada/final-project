%button.btn.btn-outline-primary.btn-sm{"data-bs-toggle": "modal", "data-bs-target": "#searchModal"}
    %i.fa-solid.fa-magnifying-glass
    Search User
.modal.fade{id: "searchModal", tabindex: -1, "aria-labelledby": "searchModal" , "aria-hidden": "true"}
    .modal-dialog
        .modal-content 
            .modal-header 
                = form_with url: "/friends", method: :post, class: "form-inline d-flex mx-auto" do |f|
                    = f.text_field :username, placeholder: "Search user", oninput: "this.form.requestSubmit()" , class: "form-control mr-sm-2"
            .modal-body
                %div.container{id: "search_results"}
            .modal-footer